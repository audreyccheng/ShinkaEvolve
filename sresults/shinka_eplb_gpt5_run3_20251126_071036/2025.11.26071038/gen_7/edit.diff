+            # Identify heavy and light packs
+            p_max = int(torch.argmax(pack_sums).item())
+            p_min = int(torch.argmin(pack_sums).item())
+            if p_max == p_min:
+                break
+            delta = (pack_sums[p_max] - pack_sums[p_min]).item()
+            if delta <= 0:
+                break
+
+            # Items in both packs
