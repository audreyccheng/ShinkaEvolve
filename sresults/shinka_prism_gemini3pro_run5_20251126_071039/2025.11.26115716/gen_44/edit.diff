 def _pack_ffd(gpu_num, items, virtual_cap):
     bins_v = [0.0] * gpu_num
     bins_p = [0.0] * gpu_num
     placement = [[] for _ in range(gpu_num)]
 
     for item in items:
         placed = False
         for i in range(gpu_num):
             if bins_p[i] + item['s'] <= GPU_MEM_SIZE and bins_v[i] + item['v'] <= virtual_cap + 1e-7:
