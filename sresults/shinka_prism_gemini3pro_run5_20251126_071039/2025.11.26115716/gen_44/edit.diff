                 bins_v[i] += item['v']
                 placement[i].append(item['m'])
                 placed = True
                 break
         if not placed: return None
     return placement
 
 def _pack_bfd(gpu_num, items, virtual_cap):
     bins_v = [0.0] * gpu_num
     bins_p = [0.0] * gpu_num
     placement = [[] for _ in range(gpu_num)]
 
